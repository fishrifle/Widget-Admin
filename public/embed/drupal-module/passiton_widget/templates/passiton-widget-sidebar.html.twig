{#
/**
 * @file
 * Default theme implementation for sidebar PassItOn widget.
 *
 * Available variables:
 * - widget_url: The URL of the widget.
 * - widget_id: Unique widget identifier.
 */
#}
<div id="{{ widget_id }}-sidebar" class="passiton-sidebar-widget">
  <div class="passiton-sidebar-tab">💝 Donate</div>
  <iframe 
    src="{{ widget_url }}" 
    width="100%" 
    height="100%" 
    frameborder="0" 
    style="border: none;"
    title="PassItOn Donation Widget"
    loading="lazy">
  </iframe>
</div>